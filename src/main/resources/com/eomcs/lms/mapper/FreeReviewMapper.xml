<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.eomcs.lms.dao.FreeReviewDao">

	<!-- Tour Map -->
	<resultMap type="freereview" id="freeReviewMap">
		<id column="free_review_id" property="no" />
		<result column="member_id" property="memberNo" />
		<result column="reservation_id" property="reservationNo" />
		<result column="title" property="title" />
		<result column="content" property="content" />
		<result column="created_date" property="createdDate" />

	</resultMap>
 <insert id="insert" parameterType="freereview">
    insert into free_review(
    member_id,
    reservation_id,
    title,
    content
   )
    values(
    #{memberNo},
    #{reservationNo},
    #{title},
    #{content})
  </insert>
 <select id="countAll" resultType="int" parameterType="string">
    select count(*)
    from free_review
    <where>
      <if test="_parameter != null">
        <bind name="pattern1" value="'%' + _parameter + '%'" />
        name like #{pattern1}
        or email like #{pattern1}
        or tel like #{pattern1}
      </if>
    </where>
  </select>

 <select id="findAll" resultMap="freeReviewMap" parameterType="map">
    select
   *
    from
    free_review
    <where>
      <if test="search != null">
        <bind name="pattern1" value="'%' + search + '%'" />
        name like #{pattern1}
        or email like #{pattern1}
        or tel like #{pattern1}
      </if>
    </where>
    order by
    created_date desc
    <if test="#{size != null || rowNo != null}">
      limit #{rowNo}, #{size}
    </if>
  </select>
</mapper>










